<?xml version="1.0" encoding="utf-8"?>
<schema include="qcl/data/model/xmlSchema/DbModel.xml">
  
  <model 
    table="permissions"
    type="qcl_type_Permission"
    name="qcl_access_model_Permission"
    extends="qcl_data_model_xmlSchema_DbModel">
    
    <definition>
    
      <!-- properties -->
      <properties>
        <property name="namedId" type="string" index="yes" unique="yes">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="name" type="string" >
          <sql>varchar(150) NOT NULL</sql>
        </property>        
        <property name="note" type="string">
          <sql> varchar(255) NULL default NULL</sql>
        </property>
      </properties>
            
    </definition>
    <links        
        localKey="id"
        foreignKey="permissionId" >
      <link 
        name="role"
        jointable="link_roles_permissions"
        model="qcl_access_model_Role"/>
    </links>
  </model>
  
</schema>