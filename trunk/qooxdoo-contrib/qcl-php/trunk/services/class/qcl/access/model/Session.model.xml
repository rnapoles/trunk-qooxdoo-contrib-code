<?xml version="1.0" encoding="utf-8"?>
<schema
  include="qcl/data/model/xmlSchema/DbModel.xml">
  
  <model 
    table="sessions"
    name="qcl_access_model_Session"
    extends="qcl_data_model_xmlSchema_DbModel">
    
    <definition>
    
      <!-- properties -->
      <properties>
        
        <property name="sessionId" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="parentSessionId" type="string">
          <sql>varchar(50) NULL</sql>
        </property>        
        <property name="userId" type="string">
          <sql>int(11) NOT NULL</sql>
        </property>    
        <property name="ip" type="string">
          <sql>varchar(32) NOT NULL</sql>
        </property>    
        <property name="markedDeleted" type="bool">
          <sql>int(1) DEFAULT 0</sql>
        </property>
        
        <!-- deprecated -->
        <property name="user" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="messages" type="string">
          <sql>longblob</sql>
        </property>
        
      </properties>
      
      <!-- indexes -->
      <indexes>
        <index type="unique">
          <property name="sessionId" />
          <property name="userId"  />
          <property name="ip"  />
        </index>
      </indexes>
            
    </definition>
    
  </model>
</schema>