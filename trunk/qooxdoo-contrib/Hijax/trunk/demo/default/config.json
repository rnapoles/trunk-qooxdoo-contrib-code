{
  "name"    : "Hijax Demo",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",    
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "hjx",
    "QOOXDOO_PATH" : "../../../../qooxdoo/trunk",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "=libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "./Manifest.json"
        },
        
        {
          "manifest" : "../../Manifest.json",
          "uri" : "../../.."
        },
        
        {
          "manifest" : "${QOOXDOO_PATH}/framework/Manifest.json",
          "uri" : "../${QOOXDOO_PATH}/framework"
        }
      ]
    },
    
    "common" :
    {
      "=include" : [ "hjx.*" ],
      "exclude" : [ "qx.test.*" ],
      
      "packages" : 
      {
        "parts" :
        {
          "boot" : [ "hjx.*", "qx.*" ]
        }
      },
      
      "settings" :
      {
        "hjx.settingsClass" : "hjx.Settings"
      }
    },
     
    "build" : 
    {
      "run" : [
        "build-copy-html",
        "build-copy-css"
      ]
    },
    
    "build-copy-html" :
    {
      "desc"    : "copy files of current application to build dir",

      "extend" : ["common"],

      "copy-files" :
      {
        "files" :
        [
          "about.html",
          "contact.html",
          "main.html",
          "products.html",
          "services.html",
          "contact-form.php",
          "contact-validate.php"
        ],

        "source" : "${ROOT}/source",
        "target" : "${BUILD_PATH}"
      }
    },
    
    "build-copy-css" :
    {
      "extend" : ["common"],
    
      "copy-files" :
      {
        "files" :
        [
          "main.css"
        ],

        "source" : "${ROOT}/source/resource/hjx/css",
        "target" : "${BUILD_PATH}/resource/hjx/css"
      }
    }    
  }
}
