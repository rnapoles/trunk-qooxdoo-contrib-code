<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.qooxdoo</groupId>
    <artifactId>qooxdoo</artifactId>
    <version>2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>org.qooxdoo</groupId>
  <artifactId>grep</artifactId>
  <version>${toolkit.version}</version>
  <name>Grep Application</name>
  <description>QWT Application. 
    Requirements: 1) show main QWT features; 2) code explainable in a single presentation 3) use advanced Qooxdoo Widgets
  </description>

  <properties>
    <toolkit.version>0.7.2-SNAPSHOT</toolkit.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.qooxdoo.toolkit</groupId>
      <artifactId>qooxdoo</artifactId>
      <version>${toolkit.version}</version>
    </dependency>
    <dependency>
      <groupId>org.qooxdoo.sushi</groupId>
      <artifactId>core</artifactId>
      <version>1.0.4-SNAPSHOT</version>
    </dependency>
  </dependencies>
 
  <build>
    <plugins>
      <plugin>
        <groupId>org.qooxdoo.toolkit</groupId>
        <artifactId>plugin</artifactId>
        <version>${toolkit.version}</version>
        <configuration>
          <application>${project.groupId}.${project.artifactId}.Application</application>
          <includes><include>**/*.java</include></includes>
          <excludes><exclude>**/Services.java</exclude></excludes>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>war</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
