{
  "name"    : "databinding",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "databinding",
    "QOOXDOO_PATH" : "../../../../../qooxdoo-trunk",
    "QXTHEME"      : "qx.theme.Modern",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en","de" ],
    "ROOT"         : ".",
    "CACHE"        : "cache"
  },

  "jobs" :
  {
    "libraries" : 
    {
      "library" :
      [
       /*
        * qcl-js
        */
       {
         "manifest" : "contrib://qcl/trunk/frontend/Manifest.json"
       },
       /*
        * qcl-php
        */
       {
         "manifest" : "contrib://qcl/trunk/backend/php/Manifest.json"
       },
       /*
        * json-rpc server
        */
       {
         "manifest" : "contrib://RpcPhp/trunk/Manifest.json"
       }  
      ]
    }
  }
}
