<?xml version="1.0" encoding="utf-8"?>
<schema include="qcl/db/model.xml">
  
  <model 
    name="qcl.access.Permission"
    extends="qcl.db.Model">
    
    <definition>
    
      <!-- properties -->
      <properties>
        <property name="namedId" dataType="string">
          <mysql>varchar(50) NOT NULL</mysql>
        </property>
        <property name="note" dataType="string">
          <mysql> varchar(255) NULL default NULL</mysql>
        </property>
      </properties>
      
      <!-- aliases -->
      <aliases>
        <alias for="descriptiveName">name</alias>
      </aliases>
      
      <!-- indexes -->
      <indexes>
        <index type="unique">
          <property name="namedId" />
        </index>
      </indexes>
            
    </definition>
    <links>
      <link 
        table="link_roles_permissions"
        localKey="id"
        foreignKey="permissionId" />
    </links>
  </model>
  
</schema>