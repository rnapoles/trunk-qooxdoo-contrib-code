<?xml version="1.0" encoding="utf-8"?>
<schema>

  <!-- 
    basic model stored in a database, containing 
    a numeric id, a modified and created column 
  -->
  <model name="qcl.db.Model">
    
    <definition>
    
      <!-- model properties -->
      <properties> 

        <!-- 'id' column int(11) NOT NULL AUTO_INCREMENT was added during table creation and defined as primary key -->

        <property name="created" dataType="string">
          <mysql>timestamp NOT NULL DEFAULT '0000-00-00 00:00:00'</mysql>
        </property>
        <property name="modified" dataType="string">
          <mysql>timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP</mysql>
        </property>
      </properties> 
      
      <!-- constraints -->
      <constraints> 
        <!-- 'id' column is already defined as primary key, here only given as example -->
        <!-- constraint type="primary"> 
          <property name="id" />
        </constraint-->        
      </constraints>
      
      <propertyGroups>
      
        <!-- metadata -->
        <propertyGroup name="metaData">
          <property name="id"/>
        </propertyGroup>
      
        <!-- skip when export data -->
        <propertyGroup name="skipExport">
          <property name="id"/>
          <property name="created"/>
          <property name="modified"/>
        </propertyGroup>
        
      </propertyGroups>
      
    </definition>
    
  </model>
</schema>