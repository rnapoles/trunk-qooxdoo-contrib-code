<?xml version="1.0" encoding="utf-8"?>
<qxt:include-definition
	xmlns:qx="http://www.qooxdoo.org"
	xmlns:qxt="http://www.qxtransformer.sourceforge.net/extension">

	<!-- main layout -->
	<qx:verticalBoxLayout 
		width="100%" height="100%" 
		display="false">
		
		<!-- control application visibility -->
		<qx:messageSubscriber filter="sample_app.messages.application.show">
			this.setDisplay(message.getData());
		</qx:messageSubscriber>							
				
		<!-- toolbar -->	
		<qxt:include src="/includes/toolbar.xml"/>
	
				
	</qx:verticalBoxLayout>

</qxt:include-definition>