{
  "name"    : "access",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    },
    {
      "path" : "${QXTRANSFORMER_PATH}/bin/qxtransformer.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation",
    
    /*
     * QxTransformer
     */
    "transform"
  ],

  "let" :
  {
    "APPLICATION"  : "access",
    "QOOXDOO_PATH" : "../../../../qooxdoo/trunk",
    "QXTHEME"      : "access.theme.Theme",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "cache",
    "ROOT"         : ".",
    
    /*
     * QxTransformer
     */
    "PYTHON"       : "/opt/local/bin/python2.5",
    "QXTRANSFORMER_PATH": "../../../../qooxdoo/qxtransformer/toolkit"
    
  },
  
  "jobs" :
  {
    "libraries" : 
    {
      "library" :
      [
        /*
         * qcl-js
         */
        {
          "manifest" : "contrib://qcl/trunk/frontend/Manifest.json"
        },
        /*
         * qcl-php
         */
        {
          "manifest" : "contrib://qcl/trunk/backend/php/Manifest.json"
        },
        /*
         * json-rpc server
         */
        {
          "manifest" : "contrib://RpcPhp/trunk/Manifest.json"
        }          
      ]
    },
    "common" :
    {
      "settings" :
      {
        "jsonrpc.backend" : "RpcPhp"
      }
    } 
  }
}
