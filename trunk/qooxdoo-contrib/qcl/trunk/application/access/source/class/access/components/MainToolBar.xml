<?xml version="1.0" encoding="utf-8"?>
<qxt:component
  xmlns:qx="http://www.qxtransformer.org/qooxdoo/0.8"
  xmlns:qxt="http://www.qxtransformer.org/extension/0.4"
  xmlns:qcl="http://www.qooxdoo.org/contrib/qcl/trunk"
  author="Christian Boulanger"
  className="access.components.MainToolBar"
  tagName="mainToolBar">

  <qx:toolBar>
    <qx:toolBarPart>
      <qx:toolBarButton label="Anonymous" enabled="true">
        <qxt:listener type="execute">
          alert("This button is for everybody!");
        </qxt:listener>
      </qx:toolBarButton>
      <qx:toolBarButton label="User" enabled="false">
      
      </qx:toolBarButton>
      <qx:toolBarButton label="Admin" enabled="false">
      
      </qx:toolBarButton>
    </qx:toolBarPart>
    <qx:toolBarPart>
      <qx:toolBarCheckBox widgetId="fooButton" label="Foo Button">
        <qcl:bind property="value" config="test.checked"/> 
      </qx:toolBarCheckBox>
      <qx:checkBox widgetId="fooCheckBox" label="Foo 2">
        <qcl:bind property="value" config="test.checked"/>
      </qx:checkBox>
    </qx:toolBarPart>
  </qx:toolBar>
  
</qxt:component>