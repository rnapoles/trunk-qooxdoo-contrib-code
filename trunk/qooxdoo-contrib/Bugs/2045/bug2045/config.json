{
  "name"    : "bug2045",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "bug2045",
    "QOOXDOO_PATH" : "../../../qooxdoo.trunk",
    "QXTHEME"      : "qx.theme.Modern",
    "API_EXCLUDE"  : ["qx.test.*"],
    "LOCALES"      : [ "en" ],
    "ROOT"         : "."
  },

  "jobs" :
  {
    "common" :
    {
      "=include" : 
      [
        "${QXTHEME}",
        "qx.legacy.theme.ClassicRoyale",
        "${APPLICATION}.Application"
      ],
      "settings" :
      {
        "qx.legacy.theme" : "qx.legacy.theme.ClassicRoyale"
      }
    }
  }
}
