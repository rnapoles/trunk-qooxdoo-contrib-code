{
  "include" :
  [
    {
      "path" : "./includes.json"
    },

    {
      "path" : "./excludes.json"
    }
  ],

  "let" :
  {
    "APPLICATION"  : "bom",
    "QOOXDOO_PATH" : "../../../qooxdoo/trunk",
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "build-base" :
    {
      "desc" : "Base settings",

      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/framework/Manifest.json",
          "uri" : ".."
        }
      ],

      "variants" :
      {
        "qx.debug" : ["off"],
        "qx.aspects" : ["off"]
      }
    },

    "compile-base" :
    {
      "extend" : [ "build-base", "includes-base" ],

      "compile-dist" :
      {
        "paths" :
        {
          "file" : "script/qx-base.js"
        },

        "uris" :
        {
          "script"   : ".",
          "resource" : "."
        },
        "code" :
        {
          "format" : "on"
        }
      }
    }
  }
}
