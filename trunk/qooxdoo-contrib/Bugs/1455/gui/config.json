{
  "name"    : "gui",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  /*
  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],
  */

  "let" :
  {
    "APPLICATION"  : "gui",
    "QOOXDOO_PATH" : "../../../qooxdoo/qooxdoo-0.8.2-sdk",
    "QXTHEME"      : "gui.theme.Theme",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en" ],
    "ROOT"         : "."
  }

  ,"jobs" :
  {

    "build-script" :
    {
      "include"  : ["qx.lang.Object"]
      // this is the same as:
      //,"=include"  : ["qx.lang.Object", "gui.theme.Theme", "gui.Application" ]
      // the next one fixes it by re-ordering:
      //,"=include"  : ["gui.theme.Theme", "gui.Application", "qx.lang.Object"]
      ,"variants" : { "=qx.debug" : ["on"]}
    }
  }
}
