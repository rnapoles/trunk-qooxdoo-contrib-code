{
  "let" :
  {
    "APPLICATION"  : "bom",
    "QOOXDOO_PATH" : "../../qooxdoo/trunk",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "build" :
    {
      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/framework/Manifest.json",
          "uri" : ".."          
        }
      ],

      "cache" :
      {
        "path" : "./cache"
      },

      "include" : 
      [
        "qx.bom.Element",
        "qx.bom.element.*",
        "qx.bom.Collection",
        "qx.dom.*",
        "qx.event.handler.*",
        "qx.log.appender.*"
      ],

      "variants" :
      {
        "qx.debug" : ["on"],
        "qx.aspects" : ["off"]
      },

      "compile-dist" :
      {
        "paths" :
        {
          "file" : "qx-bom.js"
        },
        "uris" :
        {
          "script"   : ".",
          "resource" : "."
        },
        "code" :
        {
          "format"   : true,
          "optimize" : []
        }
      }
    }
  }
}
