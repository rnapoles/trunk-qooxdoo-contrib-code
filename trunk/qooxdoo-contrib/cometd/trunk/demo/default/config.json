{
  "name"    : "cometd-qx Demo",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "cometd.chat",
    "QOOXDOO_PATH" : "../../../../qooxdoo/trunk",
    "QXTHEME"      : "qx.theme.Modern",
    "API_EXCLUDE"  : ["qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "../../Manifest.json"
        }
      ]
    },

    "source-script":
    {
      // download contrib code to location that is accessible to web server in source version
      "cache" :
      {
        "downloads" : "cache-downloads"
      },
      // load third-party scripts
      "add-script" :
      [ 
        { "uri" : "cometd:resource/cometd/dojo.js" }
        ,{ "uri" : "cometd:resource/cometd/cometd.js" }
        ,{ "uri" : "cometd:resource/cometd/AckExtension.js" }
        //,{ "uri" : "cometd:resource/cometd/ReloadExtension.js" }
        //,{ "uri" : "cometd:resource/cometd/TimeStampExtension.js" }
        //,{ "uri" : "cometd:resource/cometd/TimeSyncExtension.js" }
      ]      
    } 
  }
}
