<?xml version="1.0" encoding="UTF-8"?>
<schema
 include="qcl/data/model/xmlSchema/DbModel.xml">

  <!-- model for messages stored in the database -->
  
  <model
    name="qcl_event_message_db_Message"
    table="messages"
    extends="qcl_data_model_xmlSchema_DbModel">  
    
    <definition>
      <properties>
      
        <property name="sessionId" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>  
        <property name="name" type="string">
          <sql>varchar(100) NOT NULL</sql>
        </property>         
        <property name="data" type="string">
          <sql>blob NOT NULL</sql>
        </property>           
        <property name="markedDeleted" type="bool">
          <sql>int(1) DEFAULT 0</sql>
        </property>      
      </properties>
    </definition>
  </model>
</schema>