{
  "name"    : "bug2563",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "bug2563",
    "QOOXDOO_PATH" : "../../../../qooxdoo.trunk",
    "QXTHEME"      : "bug2563.theme.Theme",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "common" :
    {
      "packages" :
      {
        "parts"    : 
        {
          "boot" : {
            //[ "${APPLICATION}.Application", "qx.bom.client.Engine" ] //dosn't work
            "include" : [ "${APPLICATION}.Application" ] // works
          },
          "core" : {
            "include" : [ "qx.bom.*", "qx.dom.*", "qx.event.*" ]
          }
        },

        "init" : "boot"
      }      
    }
  }
}
