<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.qooxdoo.sushi</groupId>
    <artifactId>sushi</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.qooxdoo.sushi</groupId>
  <artifactId>mork</artifactId>
  <name>Sushi Mork</name>
  <packaging>jar</packaging>
  <version>${sushi.version}</version>

  <inceptionYear>1998</inceptionYear>

  <dependencies>
    <dependency>
      <groupId>org.qooxdoo.sushi</groupId>
      <artifactId>core</artifactId>
      <version>${sushi.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>bootstrap</id>
            <phase>test-compile</phase>
            <configuration>
              <tasks>
                <echo>Bootstrap Pass 1</echo>
                <fileset id="mapper.bs1" dir="${basedir}">
                   <include name="src/main/java/**/bootstrap/*.map"/>
                </fileset>
                <pathconvert property="mapper.bs1" refid="mapper.bs1" pathsep=" "/>
                <java classname="de.mlhartme.mxxx.compiler.Main"
                      failonerror="true">
                  <classpath>
                    <pathelement path="${basedir}/src/bsmork.jar" />
                    <pathelement path="${basedir}/target/classes" />                  
                    <path refid="maven.compile.classpath" />                  
                  </classpath>
                  <arg value="-d"/>
                  <arg path="${basedir}/target/classes" />
                  <arg line="${mapper.bs1}" />
                </java>
                <echo>Bootstrap Pass 2</echo>
                <fileset id="mapper.bs2" dir="${basedir}">
                   <include name="src/main/java/**/compiler/*.map"/>
                </fileset>
                <pathconvert property="mapper.bs2" refid="mapper.bs2" pathsep=" "/>
                <java classname="org.qooxdoo.sushi.compiler.Main"
                      failonerror="true">
                  <classpath>
                    <pathelement path="${basedir}/src/bsmork.jar" />
                    <pathelement path="${basedir}/target/classes" />                  
                    <path refid="maven.compile.classpath" />                  
                  </classpath>
                  <arg value="-d"/>
                  <arg path="${basedir}/target/classes" />
                  <arg value="-mapper"/>
                  <arg value="org.qooxdoo.sushi.bootstrap.Loader.loadMapper" />
                  <arg line="${mapper.bs2}" />
                </java>
                <echo>Bootstrap Pass 3</echo>
                <fileset id="mapper.bs3" dir="${basedir}">
                   <include name="src/main/java/**/*.map"/>
                   <exclude name="src/main/java/**/bootstrap/*.map"/>
                </fileset>
                <pathconvert property="mapper.bs3" refid="mapper.bs3" pathsep=" "/>
                <java classname="org.qooxdoo.sushi.compiler.Main" failonerror="true">
                  <classpath>
                    <pathelement path="${basedir}/target/classes" />                  
                    <pathelement path="${basedir}/target/test-classes" />
                    <path refid="maven.test.classpath" />                  
                  </classpath>
                  <arg value="-d"/>
                  <arg path="${basedir}/target/classes" />
                  <arg line="${mapper.bs3}"/>
                </java>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.schlund.maven.plugins</groupId>
        <artifactId>launcher</artifactId>
        <configuration>
          <name>mork</name>
          <main>org.qooxdoo.sushi.compiler.Main</main>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.2</version>
        <configuration>
          <useFile>false</useFile>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <excludes>
            <exclude>**/MainFunctionalTest.java</exclude>
            <exclude>**/PartitionTest.java</exclude>
            <exclude>**/XmlScannerTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
 
    </plugins>
  </build>  
</project>
