<?xml version="1.0" encoding="utf-8"?>

<schema
  include="qcl/db/model/xmlSchema/Model.xml">

  <model 
    table="users"
    type="qcl.type.User"
    name="qcl.access.model.User"
    extends="qcl.db.model.xmlSchema.Model"> 
     
    <!-- model definition -->
    <definition>
    
      <!-- model properties -->
      <properties>
        <property name="name" type="string">
          <sql>varchar(100) NOT NULL</sql>
        </property>
        <property name="namedId" type="string" index="yes">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="password" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="email" type="string">
          <sql> varchar(255) NULL</sql>
        </property>
        <property name="note" type="string">
          <sql>mediumtext NULL</sql>
        </property>
        <property name="active" type="bool">
          <sql>tinyint(1) default 0</sql>
        </property>           
        <property name="lastAction" type="date" skipExport="true"> 
          <sql>datetime NULL</sql>
        </property>
                
      </properties>

      <!-- indexes -->
      <indexes>
        <index type="unique">
          <property name="namedId" />
        </index>
      </indexes>
      
      <aliases>
        <alias for="namedId">username</alias>
      </aliases>
      
    </definition>
    
    
    <!-- linked tables -->
    <links 
        localKey="id" 
        foreignKey="userId">
      <link 
        name="role"
        jointable="link_user_roles" 
        model="qcl.access.model.Role" />  
        
      <!-- link 
        name="datasource"
        type="n:n"
        jointable="link_users_datasources">
        <linkedModel 
          name="qcl.datasource.type.db.Model"
          backlink="true" />
        <linkedModel 
          name="qcl.access.Role" 
          backlink="true" />  
      </link-->
    </links>
    
  </model>
</schema>