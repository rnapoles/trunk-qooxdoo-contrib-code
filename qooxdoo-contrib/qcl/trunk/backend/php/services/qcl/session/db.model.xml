<?xml version="1.0" encoding="utf-8"?>
<schema
  include="qcl/db/model.xml">
  
  <model 
    table="sessions"
    name="qcl.session.db.Model"
    extends="qcl.db.Model">
    
    <definition>
    
      <!-- properties -->
      <properties>
      
        <!-- we don't need an id -->
        <property replace="id" />
        
        <property name="sessionId" dataType="string">
          <mysql>varchar(50) NOT NULL</mysql>
        </property>
        <property name="user" dataType="string">
          <mysql>varchar(50) NOT NULL</mysql>
        </property>
        <property name="messages" dataType="string">
          <mysql>text NULL</mysql>
        </property>
      </properties>
      
      <aliases>
        <alias for="namedId">sessionId</alias>
      </aliases>
      
    </definition>
    
  </model>
</schema>