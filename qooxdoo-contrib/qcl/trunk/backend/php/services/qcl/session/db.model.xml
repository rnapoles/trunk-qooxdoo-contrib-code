<?xml version="1.0" encoding="utf-8"?>
<schema
  include="qcl/db/model.xml">
  
  <model 
    table="sessions"
    name="qcl.session.db.Model"
    extends="qcl.db.Model">
    
    <definition>
    
      <!-- properties -->
      <properties>
        
        <property name="sessionId" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="userId" type="string">
          <sql>int(11) NOT NULL</sql>
        </property>    
        <property name="ip" type="string">
          <sql>varchar(32) NOT NULL</sql>
        </property>    
        <property name="markedDeleted" type="bool">
          <sql>int(1) DEFAULT 0</sql>
        </property>
        
        <!-- deprecated -->
        <property name="user" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="messages" type="string">
          <sql>longblob</sql>
        </property>
        
      </properties>
      
      <aliases>
        <alias for="namedId">sessionId</alias>
      </aliases>
      
      <!-- indexes -->
      <indexes>
        <index type="unique">
          <property name="namedId" />
          <property name="userId"  />
          <property name="ip"  />
        </index>

        <!-- deprecated -->
        <index type="unique">
          <property name="user"  />
          <property name="namedId" />
        </index>
      </indexes>
            
    </definition>
    
  </model>
</schema>