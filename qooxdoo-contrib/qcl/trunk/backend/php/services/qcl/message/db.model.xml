<?xml version="1.0" encoding="UTF-8"?>
<schema
 include="qcl/db/model.xml">

  <!-- model for messages stored in the database -->
  
  <model
    name="qcl.message.Model"
    table="messages"
    extends="qcl.db.Model">  
    
    <definition>
      <properties>
      
        <property name="sessionId" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>  
        <property name="requestId" type="string">
          <sql>varchar(150) NOT NULL</sql>
        </property>  
        <property name="name" type="string">
          <sql>varchar(100) NOT NULL</sql>
        </property>         
        <property name="data" type="string">
          <sql>blob NOT NULL</sql>
        </property>           
      
      </properties>
    </definition>
  </model>
</schema>