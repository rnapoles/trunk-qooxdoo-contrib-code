<?xml version="1.0" encoding="utf-8"?>
<schema include="qcl/db/model.xml">
  
  <model 
    table="permissions"
    type="qcl.types.Permission"
    name="qcl.access.Permission"
    extends="qcl.db.Model">
    
    <definition>
    
      <!-- properties -->
      <properties>
        <property name="namedId" type="string" index="yes" unique="yes">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="note" type="string">
          <sql> varchar(255) NULL default NULL</sql>
        </property>
      </properties>
      
      <!-- aliases -->
      <aliases>
        <alias for="descriptiveName">name</alias>
      </aliases>
            
    </definition>
    <links        
        localKey="id"
        foreignKey="permissionId" >
      <link 
        name="role"
        table="link_roles_permissions"
        model="qcl.access.Permission"/>
    </links>
  </model>
  
</schema>