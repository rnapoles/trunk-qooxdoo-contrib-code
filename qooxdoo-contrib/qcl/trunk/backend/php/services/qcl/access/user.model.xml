<?xml version="1.0" encoding="utf-8"?>

<schema
  include="qcl/db/model.xml">

  <model 
    table="users"
    type="qcl.types.User"
    name="qcl.access.User"
    extends="qcl.db.Model"> 
     
    <!-- model definition -->
    <definition>
    
      <!-- model properties -->
      <properties>
        <property name="username" type="string" index="yes">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="password" type="string">
          <sql>varchar(50) NOT NULL</sql>
        </property>
        <property name="email" type="string">
          <sql> varchar(255) NULL</sql>
        </property>
        <property name="note" type="string">
          <sql>mediumtext NULL</sql>
        </property>
        <property name="lastAction" type="date">
          <sql>datetime NULL</sql>
        </property> 
      </properties>
      
      <!-- aliases -->
      <aliases>
        <alias for="namedId">username</alias>
      </aliases>

      <!-- indexes -->
      <indexes>
        <index type="unique">
          <property name="username" />
        </index>
      </indexes>
      
    </definition>
    
    <!-- linked tables -->
    <links 
        localKey="id" 
        foreignKey="userId">
      <link 
        name="role"
        table="link_user_roles" 
        model="qcl.access.Role" />
    </links>
    
  </model>
</schema>