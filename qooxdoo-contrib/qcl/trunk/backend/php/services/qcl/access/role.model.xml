<?xml version="1.0" encoding="utf-8"?>

<schema
  include="qcl/db/model.xml">
  
  <model 
    table="roles"
    type="qcl.types.Role"
    name="qcl.access.Role"
    extends="qcl.db.Model">
     
    <definition>
    
      <!-- properties -->
      <properties>
        <property name="namedId" type="string" index="yes" unique="yes">
          <sql>varchar(50) NOT NULL</sql> 
        </property>
        <property name="name" type="string">
          <sql> varchar(255) NOT NULL default ''</sql>
        </property>
      </properties>
 
    </definition>
    
    <!-- links to other models -->
    <links
        localKey="id"
        foreignKey="roleId">
      <link 
        name="permission"
        table="link_roles_permissions"
        model="qcl.access.Permission" />    
      <link 
        name="user"
        table="link_user_roles" 
        model="qcl.access.User" />
    </links>
  </model>
</schema>