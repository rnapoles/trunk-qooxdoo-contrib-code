<?xml version="1.0" encoding="utf-8"?>
<!-- plugin model schema -->
<schema include="qcl/db/model.xml">
  <model 
    table="plugins"
    name="qcl.plugins.db.Model"
    extends="qcl.db.Model">

   <!-- model definition -->
    <definition>
    
      <!-- properties -->
      <properties>
        <property name="namedId" dataType="string"> 
          <mysql>varchar(50) NOT NULL</mysql>
        </property>
        <property name="type" dataType="string">
          <mysql>varchar(20) NOT NULL</mysql>
        </property>
        <property name="active" dataType="boolean"> 
          <mysql>int(1) NOT NULL DEFAULT '0'</mysql>
        </property>
        <property name="status" dataType="string">
          <mysql>varchar(50) NULL</mysql>
        </property>
        <property name="permission" dataType="string">
          <mysql>varchar(50) NULL</mysql>
        </property>
        <property name="author" dataType="string">
          <mysql>varchar(100) NULL</mysql>
        </property>
        <property name="description" dataType="string">
          <mysql>varchar(255) NULL</mysql>
        </property>        
      </properties>

      <!-- unique index namedId/theme -->
      <indexes>
        <index type="unique">
          <property name="namedId" />
        </index>        
      </indexes>

      <!-- property groups -->
      <propertyGroups>
      
        <!-- metadata -->
        <propertyGroup name="metaData">
          <property name="namedId"/>
        </propertyGroup>
      
      </propertyGroups>
                
    </definition>
  </model>
</schema>
