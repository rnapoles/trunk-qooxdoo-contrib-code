<?xml version="1.0" encoding="utf-8"?>
<qxt:include-definition
	xmlns:qx="http://www.qooxdoo.org"
	xmlns:qxt="http://www.qxtransformer.sourceforge.net/extension">
	
	<qx:security>
		<qx:permission name="$namespace.permissions.config.manage"/>
	</qx:security>
	
	<qx:buttonViewButton
	    id="preferencesWidgetGeneral"
	    text="General"
	    icon="icon/32/actions/view-pane-detailed.png"
	    checked="true"/>
	    
	<qx:buttonViewPage
	    button="preferencesWidgetGeneral"
	    backgroundColor="threedface">
	    
		<qx:verticalBoxLayout 
	    	width="100%" height="100%">

	    <qx:groupBox width="100%" height="auto" legend="Application">
	    
				<qx:verticalBoxLayout 
		    	width="100%" height="100%">
		    	
		    	<qx:label text="Application Name"/>
		    	
		    	<qx:textField width="100%"
						enabled="false"
						enableOnPermission="$namespace.permissions.config.manage">		
		    	
		    		<qx:configChangeEventListener key="$namespace.application.name">
							this.setValue(event.getData());
						</qx:configChangeEventListener>
						
						<qx:eventListener type="changeValue">
							qcl.config.Manager.getInstance().setKey("$namespace.application.name",event.getData());
						</qx:eventListener>
		    	
		    	</qx:textField>	    
    
		    	<qx:label text="Splash Window HTML"/>    	
		 
		    	<qx:textArea width="100%" height="200" 
						enabled="false"
						enableOnPermission="$namespace.permissions.config.manage">		
						
						<qx:configChangeEventListener key="$namespace.application.splashTextHtml">
							this.setValue(event.getData());
						</qx:configChangeEventListener>		

						<qx:eventListener type="changeValue">
							qcl.config.Manager.getInstance().setKey("$namespace.application.splashTextHtml",event.getData());
						</qx:eventListener>
						
					</qx:textArea>		    	
		    		    		    
	    	</qx:verticalBoxLayout>
	    	
	    </qx:groupBox>
	  	
		</qx:verticalBoxLayout>
		
	</qx:buttonViewPage>
	
</qxt:include-definition>