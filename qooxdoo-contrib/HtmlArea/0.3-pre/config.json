// HtmlArea widget - config json
{
  "name" : "HtmlArea config.json",
  
  "include" :
  [
    {
      "path" : "../../qooxdoo/qooxdoo-0.8-sdk/tool/data/config/application.json"
    }
  ],
  
  "let" :
  {
    "APPLICATION"  : "htmlarea",
    "QOOXDOO_PATH" : "../../qooxdoo/qooxdoo-0.8-sdk/framework",
    "QOOXDOO_URI"  : "../${QOOXDOO_PATH}",
    "TEST_INCLUDE" : "${APPLICATION}.*",
    "CACHE"        : "../../qooxdoo/qooxdoo-0.8-sdk/cache",
    "ROOT"         : ".",
    "QXTHEME"      : "htmlarea.theme.HtmlArea"
  },
  
  
  "jobs" :
  {
    "build-htmlarea" :
    {
      "extend" : [ "build" ],
      
      "compile-dist" :
      {
        "target"   : "${BUILD_PATH}",
        "file"     : "${BUILD_PATH}/script/${APPLICATION}.js",
        "uri"      : "script/${APPLICATION}.js",
        "root"     : "${BUILD_PATH}",
        "format"   : "on",
        "locales"  : "${LOCALES}",
        "optimize" : ["basecalls", "variables", "strings"]
      }      
    },
    
    "api-light" :
    {
      "extend" : [ "api" ],

      "let" :
      {
        "API_INCLUDE"  : ["${APPLICATION}.*"],
        "API_EXCLUDE"  : ["qx.*"]
      }
    }
  }
}