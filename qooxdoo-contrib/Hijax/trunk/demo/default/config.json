{
  "name"    : "Hijax Demo",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",    
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "hjx.demo",
    "QOOXDOO_PATH" : "../../../../qooxdoo/trunk",
    "QXTHEME"      : "qx.theme.Modern",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "../../Manifest.json"
        }
      ]
    },  
    
    "build-script" :
    {
      "include" : ["hjx.*"],
      "exclude" : ["=qx.*", "=hjx.demo.*"],
      
      "compile-dist" :
      {
        "paths"  :
        {
          "file" : "${BUILD_PATH}/script/hjx.js"
        }        
      },
      
      "packages" :
      {
        "parts"    : 
        {
          "initial" : [ "hjx.*" ]
        },

        "loader-with-boot" : false
      }      
      
    },
    
    "source-script" :
    {
      "compile-source" :
      {
        "file" : "${ROOT}/source/script/hjx.js"
      },

      "packages" :
      {
        "parts"    : 
        {
          "initial" : [ "hjx.*" ]
        },

        "loader-with-boot" : false
      }       
      
    }
  }
}
